@model ApplicationUser

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-primary">Edit User</h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4">
        <form method="post">
            <input asp-for="Id" hidden />
            <div class="border p-3 mt-4">
                <div class="row pb-2">
                    <h2 class="text-primary">Edit User</h2>
                </div>

                <div asp-validation-summary="ModelOnly"></div>

                <div class="mb-3 row p-1">
                    <label asp-for="Name" class="p-0"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="mb-3 row p-1">
                    <label asp-for="UserName" class="p-0"></label>
                    <input asp-for="UserName" class="form-control" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="mb-3 row p-1">
                    <label asp-for="PasswordHash" class="p-0"></label>
                    <input asp-for="PasswordHash" type="password" class="form-control" />
                    <span asp-validation-for="PasswordHash" class="text-danger"></span>
                </div>
                <div class="mb-3 row p-1">
                    <label asp-for="Street" class="p-0"></label>
                    <input asp-for="Street" class="form-control" />
                    <span asp-validation-for="Street" class="text-danger"></span>
                </div>
                <div class="mb-3 row p-1">
                    <label asp-for="City" class="p-0"></label>
                    <input asp-for="City" class="form-control" />
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
                <div class="mb-3 row p-1">
                    <label asp-for="Suburb" class="p-0"></label>
                    <input asp-for="Suburb" class="form-control" />
                    <span asp-validation-for="Suburb" class="text-danger"></span>
                </div>
                <div class="mb-3 row p-1">
                    <label asp-for="PostCode" class="p-0"></label>
                    <input asp-for="PostCode" class="form-control" />
                    <span asp-validation-for="PostCode" class="text-danger"></span>
                </div>

                <div class="row mt-3">
                    <div class="col-6" col-md-3>
                        <button type="submit" class="btn btn-primary form-control">Edit</button>
                    </div>
                    <div class="col-6" col-md-3>
                        <a asp-controller="ApplicationUser" asp-action="Index" class="btn btn-light border form-control">Back to List</a>
                    </div>
                </div>


            </div>

        </form>
    </div>

</div>



@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}