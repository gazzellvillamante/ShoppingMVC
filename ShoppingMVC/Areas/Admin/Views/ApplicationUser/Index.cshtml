@model List<ApplicationUser>

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">User List</h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a asp-controller="ApplicationUser" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i>Create New User
                </a>
            </div>

        </div>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Username</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var obj in Model )
                {
                    <tr>
                        <td>@obj.Name</td>
                        <td>@obj.UserName</td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="ApplicationUser" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                    <i class="bi bi-pencil"></i>Edit
                                </a>
                                <a asp-controller="ApplicationUser" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                    <i class="bi bi-trash3"></i>Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            
            </tbody>
    
        </table>
    </div>
</div>