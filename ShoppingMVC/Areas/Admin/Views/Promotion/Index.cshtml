@model List<Promotion>

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Promotion List</h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Promotion" asp-action="UpdateInsert" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i>Create New Promotion
                </a>
            </div>

        </div>
        <table id="promoTable" class="table table-bordered table-striped" width="100%">
            <thead>
                <tr>
                    <th>Promotion Name</th>
                    <th>Description</th>
                    <th>Expiry Date</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts {
    <script src="~/js/promotion.js"></script>
}