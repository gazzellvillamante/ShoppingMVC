@model PromotionVM

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-primary">@(Model.Promotion.Id != 0 ? "Update" : "Create") Promotion</h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4">
        <form method="post" enctype="multipart/form-data">
            <input asp-for="Promotion.Id" hidden />
            <input asp-for="Promotion.ImageUrl" hidden/>
            <div class="row">
                <div class="col-10">
                    <div class="border p-3">
                        @*<div asp-validation-summary="ModelOnly"></div>*@


                        <div class="mb-3 row p-1">
                            <label asp-for="Promotion.Title" class="p-0"></label>
                            <input asp-for="Promotion.Title" class="form-control" />
                            <span asp-validation-for="Promotion.Title" class="text-danger"></span>
                        </div>
                        <div class="mb-3 row p-1">
                            <label asp-for="Promotion.Description" class="p-0"></label>
                            <input asp-for="Promotion.Description" class="form-control" />
                            <span asp-validation-for="Promotion.Description" class="text-danger"></span>
                        </div>
                        <div class="mb-3 row p-1">
                            <label asp-for="Promotion.ExpiryDate" class="p-0"></label>
                            <input asp-for="Promotion.ExpiryDate" class="form-control" />
                            <span asp-validation-for="Promotion.ExpiryDate" class="text-danger"></span>
                        </div>
                        <div class="mb-3 row p-1">
                            <label asp-for="Promotion.ImageUrl" class="p-0"></label>
                            <input type="file" name="file" class="form-control" />
                        </div>

                        <div class="row pt-2">
                            <div class="col-6 col-md-3">
                                @if (Model.Promotion.Id != 0)
                                {
                                    <button type="submit" class="btn btn-primary form-control">Update</button>
                                }
                                else
                                {
                                    <button type="submit" class="btn btn-primary form-control">Create</button>
                                }

                            </div>
                            <div class="col-6 col-md-3">
                                <a asp-controller="Promotion" asp-action="Index" class="btn btn-light border form-control">Back to List</a>
                            </div>
                        </div>


                    </div>
                </div>
                <div class="col-2">
                    <img src="@Model.Promotion.ImageUrl" width="100%" style="border-radius:5px; border:1px solid #bbb9b9" />  
                </div>
            </div>
            
        </form>
        
    </div>

</div>



@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}