@model Promotion
<form method="post">
    <div class="card shadow border-0 mt-4 mb-4">
        
        <div class="card-body">
            <div class="py-3">
                <div class="row">
                    <div class="col-6 col-md-2 offset-lg-1 pb-1">
                        <a asp-action="Promotion" class="btn btn-outline-primary bg-gradient mb-5 fw-semibold btn-sm text-uppercase">
                            <small>Back to Promotions</small>
                        </a>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 col-lg-3 offset-lg-1 text-center mb-3">
                        <img src="@Model.ImageUrl" width="100%" class="rounded" />
                    </div>
                    <div class="col-12 col-lg-6 offset-lg-1">

                        <div class="col-12 col-md-6 pb-4">
                            <strong>@Model.Title</strong>
                        </div>
                        
                        <div class="row pl-2 my-3">
                            <p class="text-secondary lh-sm">@Html.Raw(Model.Description)</p>
                            <p><em>This promo runs until @Model.ExpiryDate.ToShortDateString()</em></p>
                        </div>

                    </div>

                </div>
            </div>
        </div>
    </div>
</form>