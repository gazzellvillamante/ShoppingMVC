@model IEnumerable<Promotion>

<div class="row pb-3 mt-3">
    @foreach (var promo in Model)
    {
        <div class="col-lg-3 col-sm-3">
            <div class="row p-2">
                <div class="col-12 p-1">
                    <div class="card border-0 p-3 shadow border-top border rounded">                        
                        <img src="@promo.ImageUrl" class="card-img-top rounded"></img>
                        <div class="card-body pb-0">
                            <div class="pl-1">
                                <p class="card-title h5 text-dark text-opacity-75 text-uppercase text-center">@promo.Title</p>
                            </div>
                            <div class="pl-1">
                                <p class="text-dark text-opacity-75 text-center"><span>Expires on @promo.ExpiryDate.ToShortDateString()</span></p>
                            </div>
                        </div>
                        <div>
                            <a asp-action="PromoDetail" asp-route-Id="@promo.Id" class="btn btn-primary bg-gradient border-0 form-control">Details</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>