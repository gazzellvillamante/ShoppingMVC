@model ShoppingMVC.Models.ShippingDetails

@{
    ViewData["Title"] = "Checkout - Shipping Information";
}

<h1>Checkout - Shipping Information</h1>

<form method="post" asp-action="Checkout">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Name">Full Name:</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PhoneNumber">Phone Number:</label>
        <input asp-for="PhoneNumber" class="form-control" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Address">Address:</label>
        <textarea asp-for="Address" class="form-control"></textarea>
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Proceed to Confirmation</button>
    <a asp-action="GetUserCart" class="btn btn-secondary">Back to Cart</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}